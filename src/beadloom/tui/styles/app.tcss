/* Beadloom TUI Stylesheet */

Screen {
    layout: vertical;
}

#main-content {
    height: 1fr;
}

#domain-list {
    width: 1fr;
    max-width: 40;
    border: solid $primary;
}

#node-detail {
    width: 3fr;
    border: solid $secondary;
    padding: 1 2;
    overflow-y: auto;
}

#status-bar {
    height: 1;
    background: $surface;
    color: $text-muted;
    padding: 0 1;
}
