/* Beadloom TUI â€” Explorer Screen Stylesheet */

/* Explorer root container */
#explorer-container {
    layout: vertical;
    width: 100%;
    height: 100%;
}

/* Explorer header */
#explorer-header {
    width: 100%;
    height: 1;
    background: $primary;
    color: $text;
    padding: 0 1;
    text-style: bold;
}

/* Screen description below header */
.screen-desc {
    height: 1;
    color: $text-muted;
    text-style: italic;
    padding: 0 1;
}

/* Main content: left + right panels */
#explorer-main {
    layout: horizontal;
    width: 100%;
    height: 1fr;
}

/* Left panel: node detail (50%) */
#explorer-left {
    width: 1fr;
    height: 100%;
    border-right: solid $surface-lighten-2;
    overflow-y: auto;
}

/* Right panel: dependency path / context preview (50%) */
#explorer-right {
    width: 1fr;
    height: 100%;
    overflow-y: auto;
}

/* Node detail panel */
#node-detail-panel {
    width: 100%;
    height: 100%;
    overflow-y: auto;
}

/* Dependency path widget */
#dependency-path {
    width: 100%;
    height: 100%;
    overflow-y: auto;
}

/* Context preview widget */
#context-preview {
    width: 100%;
    height: 100%;
    overflow-y: auto;
}

/* Explorer action bar */
#explorer-action-bar {
    width: 100%;
    height: 1;
    padding: 0 2;
    background: $surface;
    color: $text-muted;
    text-style: italic;
    dock: bottom;
    border-top: solid $primary;
}
